page{
  color:#666;
  padding: 0 10rpx;
}
.navWarp{

}
.nav{
  white-space: nowrap;
  padding: 5rpx 0;
}
.navItem{
  padding: 20rpx 45rpx;
  font-size:30rpx;
  display: inline-block; 
}

.navItem.active{
  border-bottom: 1px solid red;
}

.slide{
  margin:10rpx 0; 
}
.slide swiper{
  height:220rpx;
}
.slide navigator{
  height:100%;
  width: 100%;
}

.slide image{
  height:100%;
  width: 100%;
}
/*视频区*/
.videoWarp{
  display: flex;
  flex-wrap: wrap;
  padding: 5rpx;
  justify-content: space-between;
}

.videoItem{
  width:48%;
  margin-bottom: 20rpx;
}

.videoImg{
  position: relative;
}

.videoImg image{
  width: 100%;
  border-radius: 15rpx;
}

.videoImg .videoInfo{
  padding: 0 5rpx;
  position: absolute;
  left:0rpx;
  bottom:10rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  color: white;
  font-size: 24rpx;
}

.videoDesc{
  font-size: 28rpx;

  display:-webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}